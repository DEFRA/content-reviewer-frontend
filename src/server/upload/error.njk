{% extends "layouts/page.njk" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ heading }}</h1>

      <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
          There is a problem
        </h2>
        <div class="govuk-error-summary__body">
          <p class="govuk-body">{{ errorMessage }}</p>
        </div>
      </div>

      {% if status and status.form and status.form.file %}
        <h2 class="govuk-heading-m">Error Details</h2>
        <dl class="govuk-summary-list">
          {% if status.form.file.filename %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">Filename</dt>
            <dd class="govuk-summary-list__value">{{ status.form.file.filename }}</dd>
          </div>
          {% endif %}

          {% if status.form.file.fileStatus %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">Status</dt>
            <dd class="govuk-summary-list__value">
              <strong class="govuk-tag govuk-tag--red">{{ status.form.file.fileStatus }}</strong>
            </dd>
          </div>
          {% endif %}

          {% if status.form.file.errorMessage %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">Reason</dt>
            <dd class="govuk-summary-list__value">{{ status.form.file.errorMessage }}</dd>
          </div>
          {% endif %}
        </dl>
      {% endif %}

      <h2 class="govuk-heading-m">What you can do</h2>
      <ul class="govuk-list govuk-list--bullet">
        <li>Check that your file is a valid PDF or Word document</li>
        <li>Ensure the file is smaller than 10MB</li>
        <li>Make sure the file is not corrupted or password-protected</li>
        <li>Verify that the file does not contain viruses</li>
      </ul>

      <p class="govuk-body">
        <a href="/upload" class="govuk-button" data-module="govuk-button">Try Again</a>
      </p>

      <p class="govuk-body">
        <a href="/" class="govuk-link">Back to home</a>
      </p>
    </div>
  </div>
{% endblock %}
