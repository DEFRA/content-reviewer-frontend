# ==================================================
# CDP PRODUCTION ENVIRONMENT
# ==================================================
NODE_ENV=production
ENVIRONMENT=prod
PORT=3000

# ==================================================
# BACKEND API CONFIGURATION
# ==================================================
BACKEND_URL=https://content-reviewer-backend.prod.cdp-int.defra.cloud

# ==================================================
# SESSION CONFIGURATION
# ==================================================
SESSION_CACHE_ENGINE=redis
# SESSION_COOKIE_PASSWORD should be set via CDP secrets

# ==================================================
# REDIS CONFIGURATION
# ==================================================
REDIS_HOST=redis-prod.cdp-int.defra.cloud
REDIS_USERNAME=content-reviewer
USE_SINGLE_INSTANCE_CACHE=false
REDIS_TLS=true

# ==================================================
# LOGGING
# ==================================================
LOG_LEVEL=warn
LOG_FORMAT=ecs
LOG_ENABLED=true

# ==================================================
# SECURITY & METRICS
# ==================================================
ENABLE_SECURE_CONTEXT=true
ENABLE_METRICS=true
STATIC_CACHE_TIMEOUT=604800000
